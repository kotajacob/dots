[user]
	email = kota@nilsu.org
	name = Dakota Walsh
	signingkey = ~/.ssh/id_ed25519.pub
[color]
	ui = auto
[alias]
	aa = add --all
	st = status
	ci = commit --verbose
	br = branch --sort=committerdate
	sw = switch
	co = checkout
	ff = merge --ff-only
	ra = log --oneline --graph --decorate --all
	raa = log --oneline
	di = diff
	dc = diff --cached
	amend = commit --amend
	fa = fetch --all
	ps = push
	pl = pull
	dh1 = diff HEAD~1
	hard = reset --hard FETCH_HEAD
[push]
	autoSetupRemote = true
[pull]
	rebase = true
[commit]
	gpgsign = true
[gpg]
	program = gpg2
	format = ssh
[init]
	defaultBranch = main
[core]
	excludesfile = ~/.gitignore_global
[pager]
	log = diff-highlight | less -FRX
	show = diff-highlight | less -FRX
	diff = diff-highlight | less -FRX
	branch = cat
