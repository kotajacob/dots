{
	"coc.preferences.formatOnSaveFiletypes": [
		"javascript",
		"html",
		"json",
		"css",
		"scss"
	],
	"coc.preferences.colorSupport": false,
	"languageserver": {
		"godot": {
			"host": "127.0.0.1",
			"filetypes": [
				"gdscript"
			],
			"port": 6008
		},
		"golang": {
			"command": "gopls",
			"args": [
				"-remote=auto"
			],
			"rootPatterns": [
				"go.mod",
				".vim/",
				".git/",
				".hg/"
			],
			"filetypes": [
				"go"
			]
		}
	},
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck"
	},
	"diagnostic-languageserver.formatFiletypes": {
		"lua": "lua-format",
		"sh": "shfmt"
	}
}
