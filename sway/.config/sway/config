set $mod Mod4
set $left h
set $down j
set $up k
set $right l

font pango:Berkeley Mono Bold 9

# outputs
set $laptop eDP-1
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable
output eDP-1 scale 1.5

output * subpixel none
output * background ~/pics/walls/E8DAFF.png fill

# disable monitor after 15 minutes of inactivity
exec swayidle -w \
	timeout 900 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"'


# inputs
input "type:keyboard" {
	xkb_layout us
	xkb_file /home/kota/.config/sway/keymap.xkb
	repeat_delay 350
	repeat_rate 40
}

input "type:pointer" {
	accel_profile "flat"
}

input "type:touchpad" {
    dwt enabled
    tap enabled
    tap_button_map lmr
    middle_emulation enabled
    natural_scroll enabled
}

# start a terminal
bindsym $mod+Return exec nice -n -5 foot
bindsym $mod+Shift+Return exec nice -n -5 foot -o app-id="foot-float"

# kill focused window
bindsym $mod+q kill

# start your launcher
bindsym $mod+d exec launcher

# start a browser
bindsym $mod+b exec firefox

# floating mod
floating_modifier $mod

# reload the configuration
bindsym $mod+Shift+c reload

# brightness
bindsym --locked XF86MonBrightnessDown exec light -2 && light > $XDG_RUNTIME_DIR/wob.sock
bindsym --locked XF86MonBrightnessUp exec light +2 && light > $XDG_RUNTIME_DIR/wob.sock

# volume
bindsym XF86AudioRaiseVolume exec pamixer -ui 2 && pamixer --get-volume > $XDG_RUNTIME_DIR/wob.sock
bindsym XF86AudioLowerVolume exec pamixer -ud 2 && pamixer --get-volume > $XDG_RUNTIME_DIR/wob.sock
bindsym XF86AudioMute exec pamixer --toggle-mute && ( [ "$(pamixer --get-mute)" = "true" ] && echo 0 > $XDG_RUNTIME_DIR/wob.sock ) || pamixer --get-volume > $XDG_RUNTIME_DIR/wob.sock

# music controlls
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev
bindsym XF86AudioPlay exec mpc toggle

# screenshots
bindsym $mod+s exec grimshot --notify copy output
bindsym $mod+Shift+s exec grimshot --notify copy area
bindsym Print exec grimshot --notify copy output
bindsym Shift+Print exec grimshot --notify copy area

# info notification
bindsym $mod+Escape exec --no-startup-id notabar < /home/kota/.config/notabar/all

# airplane mode
bindsym XF86RFKill exec --no-startup-id notabar < /home/kota/.config/notabar/airplane

# dismiss notifications
bindsym Control+space exec --no-startup-id dunstctl close
bindsym Control+Shift+space exec --no-startup-id dunstctl close-all

# emoji selection
bindsym $mod+o exec --no-startup-id emoji

# music
bindsym $mod+m exec --no-startup-id mpc toggle
bindsym $mod+comma exec --no-startup-id mpc prev
bindsym $mod+period exec --no-startup-id mpc next

# exit
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# resize the focused window
set $distance 10
bindsym $mod+Control+h resize shrink width $distance px
bindsym $mod+Control+j resize grow height $distance px
bindsym $mod+Control+k resize shrink height $distance px
bindsym $mod+Control+l resize grow width $distance px
bindsym $mod+Control+x move absolute position center

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# split in horizontal orientation
bindsym $mod+x split h

# split in vertical orientation
bindsym $mod+z split v

# fullscreen mode
bindsym $mod+f fullscreen toggle

# change container layout (tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

## borders
default_border pixel 4
default_floating_border pixel 4

## gaps
gaps inner 8
smart_gaps on

### selection color
set $sc #9b70ff
### inactive color
set $ic #f7f1ff
### urgent color
set $uc #bc4a9b
### font color
set $fc #000000

### class					border	back	text	indicator	child_border
client.focused				$sc		$sc		$ic		$sc			$sc
client.focused_inactive		$ic		$ic		$sc		$ic			$ic
client.unfocused			$ic    	$ic		$sc		$ic			$ic
client.urgent				$uc		$uc		$sc		$uc			$uc
client.placeholder			$sc    	$sc		$sc		$sc			$sc
client.background			$sc

# wait a bit before removing urgency hint from windows/workspaces
force_display_urgency_hint 750 ms

# program overrides
# use swaymsg -t get_tree
for_window [shell="xwayland"] floating enable
for_window [app_id="foot-float"] floating enable
for_window [app_id="imv"] floating enable
for_window [app_id="imv"] resize set 640px 360px
for_window [app_id="imv" title=".*aart.*"] resize set 360px 360px
for_window [app_id="imv"] border pixel 3
for_window [app_id="bemenu"] border pixel 3
for_window [app_id="mpv"] floating enable
for_window [app_id="mpv"] resize set 1280px 720px
for_window [title="Firefox — Sharing Indicator"] floating enable
for_window [title="Firefox — Sharing Indicator"] kill
for_window [title="SL8"] floating enable
for_window [title="WASM-4"] floating enable
# for_window [class="^Godot$" title="Settings"] floating enable
# for_window [instance="Godot_Engine" title="DEBUG"] floating enable

# set DISPLAY variable for dbus...
exec --no-startup-id exec dbus-update-activation-environment --all

# start dunst
exec --no-startup-id dunst

# start wob
exec --no-startup-id $HOME/bin/wob-daemon

# start pipewire
exec --no-startup-id pipewire
exec --no-startup-id pipewire-pulse

# start mpd
exec --no-startup-id mpd

# start syncthing
exec --no-startup-id syncthing --no-browser

# cursor
seat seat0 xcursor_theme capitaine-cursors
exec_always gsettings set org.gnome.desktop.interface cursor-theme "capitaine-cursors"
