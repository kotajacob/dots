set $mod Mod4
set $left h
set $down j
set $up k
set $right l
floating_modifier $mod
tiling_drag modifier titlebar

font pango:BerkeleyMono Nerd Font Bold 12

# start a terminal
bindsym $mod+Return exec --no-startup-id st
bindsym $mod+Shift+Return exec --no-startup-id st -c "st-float"

# start a launcher
bindsym $mod+d exec --no-startup-id launcher

# kill focused window
bindsym $mod+q kill

# start a browser
bindsym $mod+b exec --no-startup-id qutebrowser

# reload the configuration
bindsym $mod+Shift+c reload

# exit
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'exit?' -B 'yes' 'i3-msg exit'"

# dismiss notifications
bindsym Control+space exec --no-startup-id dunstctl close
bindsym Control+Shift+space exec --no-startup-id dunstctl close-all

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# resize the focused window
set $distance 10
bindsym $mod+Control+h resize shrink width $distance px
bindsym $mod+Control+j resize grow height $distance px
bindsym $mod+Control+k resize shrink height $distance px
bindsym $mod+Control+l resize grow width $distance px
bindsym $mod+Control+x move absolute position center

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# split in horizontal orientation
bindsym $mod+x split h

# split in vertical orientation
bindsym $mod+z split v

# fullscreen mode
bindsym $mod+f fullscreen toggle

# change container layout (tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

## borders
default_border pixel 4
default_floating_border pixel 4

## gaps
gaps inner 8
smart_gaps on

### selection color
set $sc #b7b4ae
### inactive color
set $ic #333333
### urgent color
set $uc #b668a0
### font color
set $fc #dddcd9

### class					border	back	text	indicator	child_border
client.focused				$sc		$sc		$ic		$sc			$sc
client.focused_inactive		$ic		$ic		$sc		$ic			$ic
client.unfocused			$ic    	$ic		$sc		$ic			$ic
client.urgent				$uc		$uc		$sc		$uc			$uc
client.placeholder			$sc    	$sc		$sc		$sc			$sc
client.background			$sc

# overrides
for_window [class="imv"] floating enable
for_window [class="mpv"] floating enable
for_window [class="mpv"] resize set 640px 630px
for_window [class="pico8"] floating enable
for_window [class="pico8"] resize set 1024 px 1024 px
for_window [class="pico8"] move absolute position center
for_window [class="st-float"] floating enable

# wait a bit before removing urgency hint from windows/workspaces
force_display_urgency_hint 750 ms

# set keymap
exec --no-startup-id xkbcomp -w 0 "$HOME/.config/i3/keymap.xkb" "$DISPLAY"

# set key repeat speed
exec --no-startup-id xset r rate 350 40

# disable monitor sleeping
exec --no-startup-id xset -dpms

# set background color
exec --no-startup-id xsetroot -solid "#181818"

# enable Xresources
exec --no-startup-id xrdb ~/.Xresources

# hide the mouse when we don't need it
exec --no-startup-id unclutter-xfixes
