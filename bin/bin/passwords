#!/bin/bash

COMMAND="fd . /home/kota/.password-store -e gpg | xargs basename -s .gpg -a \
	| fzf --reverse --no-scrollbar --no-separator --no-color --info inline-right"
TMP=$(mktemp)

foot -o app-id="foot-float" -W 30x10 bash -c "$COMMAND > $TMP"

SELECTION=$(cat "$TMP")
pass -c "$SELECTION"
rm "$TMP"
