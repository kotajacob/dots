#!/bin/sh

fg="$FG"ff
bg="$BG"ff
primary="$PRIMARY"ff

SELECTION=$(dprint -d /home/kota/.config/dprint -p \
	| fuzzel -d -I -l 10 -f "Berkeley Mono:size=10" \
	-x 4 -y 0 -B 4 -r 0 -p "" -D "no" \
	-b "$bg" -t "$fg" -m "$fg" -M "$fg" -s "$primary" -S "$bg" \
	-C "$primary" "$@")

echo "Name:$SELECTION" | dprint -d /home/kota/.config/dprint -p -i - -o "StripExec" | ${SHELL:-"/bin/sh"} &
