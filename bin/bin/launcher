#!/bin/bash

COMMAND="/home/kota/.local/bin/dprint -d /home/kota/.config/dprint -p \
	| fzf --reverse --no-scrollbar --no-separator --no-color --info inline-right"
TMP=$(mktemp)

foot -o app-id="foot-float" -W 30x10 bash -c "$COMMAND > $TMP"

SELECTION=$(cat "$TMP")
echo "Name:$SELECTION" \
	| /home/kota/.local/bin/dprint -d /home/kota/.config/dprint -p -i - -o "StripExec" \
	| ${SHELL:-"/bin/sh"} &
rm "$TMP"
