#!/bin/sh

COMMAND="fd . --type f /home/kota/docs/books/ -e pdf -e epub -x basename \
	| sort -R \
	| fzf --reverse --no-scrollbar --no-separator --no-color --info inline-right"
TMP=$(mktemp)

foot -o app-id="foot-float" -W 60x20 bash -c "$COMMAND > $TMP"

SEARCH=$(cat "$TMP")
SELECTION=$(fd "$SEARCH" /home/kota/docs/books/)
zathura "$SELECTION"
rm "$TMP"
