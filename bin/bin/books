#!/bin/sh

fg="$FG"ff
bg="$BG"ff
primary="$PRIMARY"ff

BOOKS="/home/kota/docs/books/"

SEARCH=$(fd . --type f "$BOOKS" -e pdf -e epub -x basename |\
	sort -R | fuzzel -d -I -l 16 -w 80 -f "Berkeley Mono:size=10" \
	-x 4 -y 0 -B 8 -r 0 -p "" \
	-b "$bg" -t "$fg" -m "$fg" -M "$fg" -s "$primary" -S "$bg" \
	-C "$primary" "$@")

SELECTION=$(fd "$SEARCH" "$BOOKS")
zathura "$SELECTION"
