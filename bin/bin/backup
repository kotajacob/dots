#!/bin/sh

export BORG_REPO=/mnt/sietch/kota/borg

borg create                                \
    --stats                                \
    --progress                             \
		--exclude "$HOME/docs/podcasts/*"      \
		--exclude "$HOME/docs/games/3ds/*"     \
		--exclude "$HOME/docs/games/ds/*"      \
		--exclude "$HOME/docs/games/gamecube/*"\
		--exclude "$HOME/docs/games/linux/*"   \
		--exclude "$HOME/g/void-package/*"     \
		--exclude "$HOME/vids/*"               \
		--exclude "$HOME/.steam/*"             \
		--exclude "$HOME/.wine/*"              \
		--exclude "$HOME/.local/share/Steam/*" \
		--exclude "$HOME/docs/iso/*"           \
		--exclude "$HOME/tmp/*"                \
		--exclude "$HOME/.cache/*"             \
    --exclude "$HOME/.minikube/*"          \
                                           \
    ::'{user}-{now}'                       \
    ~/
