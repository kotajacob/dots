#!/bin/sh

export BORG_REPO=/mnt/sietch/kota/borg

borg create                             \
    --stats                             \
    --progress                          \
		--exclude "$HOME/docs/games/*"      \
		--exclude "$HOME/docs/podcasts/*"   \
		--exclude "$HOME/docs/audiobooks/*" \
		--exclude "$HOME/docs/iso/*"        \
                                        \
    ::'{user}-{now}'                    \
    ~/docs                              \
    ~/pics                              \
    ~/music                             \
    ~/g                                 \
    ~/.local/opt/MultiMC                \

# borg prune                              \
