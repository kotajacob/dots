#!/bin/bash

PROJECT_ROOT=$(git rev-parse --show-toplevel)
DIST=$PROJECT_ROOT/dist
DATA="$HOME/src/portainer/drives/current"
ASSETS=$DIST

cd "$PROJECT_ROOT"/api/cmd/portainer || exit
dlv debug --build-flags="--ldflags '-X github.com/portainer/liblicense.LicenseServerBaseURL=https://localhost:6002'" -- --data="$DATA" --assets="$ASSETS"
